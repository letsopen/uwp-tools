<Page
    x:Class="UwpTools.Views.EncryptionToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpTools.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="加密工具" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <ComboBox x:Name="AlgorithmComboBox"
                  Grid.Row="1"
                  PlaceholderText="选择加密算法"
                  SelectionChanged="AlgorithmComboBox_SelectionChanged"
                  Margin="0,0,0,20">
            <ComboBoxItem Content="AES" Tag="aes"/>
            <ComboBoxItem Content="DES" Tag="des"/>
            <ComboBoxItem Content="RSA" Tag="rsa"/>
            <ComboBoxItem Content="Base64" Tag="base64"/>
        </ComboBox>

        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="密钥："
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <TextBox x:Name="KeyTextBox"
                     PlaceholderText="输入密钥"
                     Visibility="Collapsed"/>
            <PasswordBox x:Name="KeyPasswordBox"
                         PlaceholderText="输入密钥"
                         Visibility="Visible"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputTextBox"
                     Grid.Row="0"
                     Grid.Column="0"
                     Grid.ColumnSpan="3"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     PlaceholderText="输入文本"
                     Margin="0,0,0,10"/>

            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Horizontal">
                <Button x:Name="EncryptButton"
                        Content="加密"
                        Click="EncryptButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="DecryptButton"
                        Content="解密"
                        Click="DecryptButton_Click"/>
            </StackPanel>

            <TextBox x:Name="OutputTextBox"
                     Grid.Row="2"
                     Grid.Column="0"
                     Grid.ColumnSpan="3"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     PlaceholderText="输出结果"/>

            <StackPanel Grid.Row="1"
                        Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="CopyButton"
                        Content="复制"
                        Click="CopyButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="ClearButton"
                        Content="清除"
                        Click="ClearButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page> 
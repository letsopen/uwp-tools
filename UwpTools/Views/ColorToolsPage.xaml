<Page
    x:Class="UwpTools.Views.ColorToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UwpTools.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="颜色工具" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="HEX:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <TextBox x:Name="HexTextBox"
                     PlaceholderText="#RRGGBB"
                     TextChanged="HexTextBox_TextChanged"/>
            <Button x:Name="CopyHexButton"
                    Content="复制"
                    Click="CopyHexButton_Click"
                    Grid.Column="2"
                    Margin="10,0,0,0"/>
        </Grid>

        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="RGB:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="RedTextBox"
                         Width="60"
                         PlaceholderText="R"
                         TextChanged="RgbTextBox_TextChanged"/>
                <TextBox x:Name="GreenTextBox"
                         Width="60"
                         PlaceholderText="G"
                         Margin="10,0"
                         TextChanged="RgbTextBox_TextChanged"/>
                <TextBox x:Name="BlueTextBox"
                         Width="60"
                         PlaceholderText="B"
                         TextChanged="RgbTextBox_TextChanged"/>
            </StackPanel>
            <Button x:Name="CopyRgbButton"
                    Content="复制"
                    Click="CopyRgbButton_Click"
                    Grid.Column="2"
                    Margin="10,0,0,0"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="HSL:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="HueTextBox"
                         Width="60"
                         PlaceholderText="H"
                         TextChanged="HslTextBox_TextChanged"/>
                <TextBox x:Name="SaturationTextBox"
                         Width="60"
                         PlaceholderText="S"
                         Margin="10,0"
                         TextChanged="HslTextBox_TextChanged"/>
                <TextBox x:Name="LightnessTextBox"
                         Width="60"
                         PlaceholderText="L"
                         TextChanged="HslTextBox_TextChanged"/>
            </StackPanel>
            <Button x:Name="CopyHslButton"
                    Content="复制"
                    Click="CopyHslButton_Click"
                    Grid.Column="2"
                    Margin="10,0,0,0"/>
        </Grid>

        <Border Grid.Row="4"
                BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="1"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="预览："
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <Border x:Name="ColorPreview"
                        Background="Transparent"
                        Width="100"
                        Height="100"/>
            </Grid>
        </Border>
    </Grid>
</Page> 